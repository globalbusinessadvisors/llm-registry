# LLM Registry Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
ENVIRONMENT=development

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://llmreg:llmreg_dev_password@localhost:5432/llm_registry
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# ============================================================================
# NATS Configuration
# ============================================================================
NATS_URL=nats://localhost:4222

# ============================================================================
# Observability Configuration
# ============================================================================
# Logging
RUST_LOG=info
LOG_FORMAT=pretty  # or json
LOG_INCLUDE_TIMESTAMPS=true
LOG_INCLUDE_THREAD_IDS=false
LOG_INCLUDE_TARGET=true

# Tracing
JAEGER_AGENT_ENDPOINT=localhost:6831
OTEL_SERVICE_NAME=llm-registry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ============================================================================
# Security Configuration
# ============================================================================
# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE_SECONDS=3600

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_GRAPHQL=true
ENABLE_GRPC=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# ============================================================================
# Storage Configuration (for future use)
# ============================================================================
STORAGE_BACKEND=filesystem  # or s3, gcs, azure
STORAGE_PATH=./data
