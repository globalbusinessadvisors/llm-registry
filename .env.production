# ============================================================================
# Production Environment Configuration for LLM Registry
#
# IMPORTANT: This file contains sensitive information.
# DO NOT commit this file to version control.
# Copy this template as .env.production and fill in the values.
# ============================================================================

# ---------------------------------------------------------------------------
# Application Configuration
# ---------------------------------------------------------------------------
ENVIRONMENT=production
RUST_LOG=info
RUST_BACKTRACE=1

# API Replicas (for scaling)
API_REPLICAS=2

# ---------------------------------------------------------------------------
# Database Configuration
# ---------------------------------------------------------------------------
POSTGRES_DB=llm_registry
POSTGRES_USER=llmreg
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database connection pool
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# ---------------------------------------------------------------------------
# Security Configuration
# ---------------------------------------------------------------------------
# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourapp.com,https://api.yourapp.com

# JWT Secret (must be at least 32 characters)
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_HERE

# API Keys for service authentication
API_KEY=CHANGE_ME_GENERATE_API_KEY_HERE

# ---------------------------------------------------------------------------
# Observability Configuration
# ---------------------------------------------------------------------------
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
GRAFANA_ROOT_URL=https://grafana.yourapp.com

# ---------------------------------------------------------------------------
# External Services (Optional)
# ---------------------------------------------------------------------------
# S3 Storage (if using AWS S3 for asset storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=llm-registry-assets

# GCS Storage (if using Google Cloud Storage)
GCS_PROJECT_ID=
GCS_BUCKET=llm-registry-assets
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Azure Blob Storage (if using Azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=llm-registry-assets

# ---------------------------------------------------------------------------
# Feature Flags
# ---------------------------------------------------------------------------
ENABLE_GRPC=true
ENABLE_GRAPHQL=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_CACHING=true

# ---------------------------------------------------------------------------
# Rate Limiting
# ---------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# ---------------------------------------------------------------------------
# Backup Configuration
# ---------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ---------------------------------------------------------------------------
# SSL/TLS Configuration
# ---------------------------------------------------------------------------
SSL_CERT_PATH=/etc/nginx/certs/cert.pem
SSL_KEY_PATH=/etc/nginx/certs/key.pem

# ---------------------------------------------------------------------------
# Notification Configuration
# ---------------------------------------------------------------------------
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email configuration for alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=alerts@yourcompany.com
